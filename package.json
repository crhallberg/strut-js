{
  "scripts": {
    "dev": "tsc --watch",
    "size": "size-limit",
    "test": "tsc && size-limit",
    "format": "prettier --check --write *.js *.json"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^6.0.3",
    "prettier": "^2.4.1",
    "size-limit": "^6.0.3",
    "typescript": "^4.4.4"
  },
  "size-limit": [
    {
      "name": "just StrutTemplate",
      "path": "index.js",
      "import": "Template",
      "limit": "700 B"
    },
    {
      "name": "StrutTemplate + clone",
      "path": "index.js",
      "import": "Template, { clone }",
      "limit": "1 kB"
    },
    {
      "name": "StrutTemplate + clone + map",
      "path": "index.js",
      "import": "Template, { clone, map }",
      "limit": "1 kB"
    }
  ]
}
